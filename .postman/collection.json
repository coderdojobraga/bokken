										"exec": [
											"pm.test(\"Test Sign up\", function(){",
											"    pm.response.to.have.status(200);",
											"})",
											"",
											"pm.test(\"set-cookie is present\", function () {",
											"    pm.response.to.have.header(\"set-cookie\");",
											"});",
